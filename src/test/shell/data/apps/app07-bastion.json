    "application": {
        "id": null,
        "name": "Bastion",
        "version": "2.1.3",
        "configWizardTemplate": {
            "template": {
                "components": [
                    {
                        "label": "Tabs",
                        "components": [
                            {
                                "label": "Base",
                                "key": "configTab",
                                "components": [
                                    {
                                        "label": "Mandatory parameters",
                                        "hideLabel": true,
                                        "type": "container",
                                        "input": true,
                                        "tab": 0,
                                        "key": "mandatoryParameters",
                                        "components": [
                                            {
                                                "label": "SSH keys (comma separated)",
                                                "type": "textfield",
                                                "input": true,
                                                "key": "env#ssh_keys",
                                                "tab": 0,
                                                "inputFormat": "plain",
                                                "validate": {
                                                    "required": true
                                                }
                                            },
                                            {
                                                "label": "Enable SSH key management application",
                                                "type": "checkbox",
                                                "defaultValue": false,
                                                "input": true,
                                                "key": "pubkeyManagement#app#enabled",
                                                "inputFormat": "plain",
                                                "description": ""
                                            },
                                            {
                                                "label": "Application admin username",
                                                "type": "textfield",
                                                "input": true,
                                                "key": "pubkeyManagement#adminUsername",
                                                "tab": 0,
                                                "validate": {
                                                    "required": true
                                                },
                                                "inputFormat": "plain",
                                                "conditional": {
                                                    "show": true,
                                                    "when": "pubkeyManagement#app#enabled",
                                                    "eq": true
                                                }
                                            },
                                            {
                                                "label": "Application admin password",
                                                "type": "password",
                                                "input": true,
                                                "key": "pubkeyManagement#adminPassword",
                                                "tab": 0,
                                                "inputFormat": "plain",
                                                "validate": {
                                                    "required": true
                                                },
                                                "conditional": {
                                                    "show": true,
                                                    "when": "pubkeyManagement#app#enabled",
                                                    "eq": true
                                                }
                                            },
                                            {
                                                "label": "Application admin email address",
                                                "type": "email",
                                                "input": true,
                                                "key": "pubkeyManagement#adminEmail",
                                                "tab": 0,
                                                "inputFormat": "plain",
                                                "validate": {
                                                    "required": true
                                                },
                                                "conditional": {
                                                    "show": true,
                                                    "when": "pubkeyManagement#app#enabled",
                                                    "eq": true
                                                }
                                            },
                                            {
                                                "label": "Enable task scheduling",
                                                "type": "checkbox",
                                                "defaultValue": false,
                                                "input": true,
                                                "key": "pubkeyManagement#scheduling#enabled",
                                                "tab": 0,
                                                "inputFormat": "plain",
                                                "description": "",
                                                "conditional": {
                                                    "show": true,
                                                    "when": "pubkeyManagement#app#enabled",
                                                    "eq": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "label": "Advanced",
                                "key": "advancedTab",
                                "components": [
                                    {
                                        "label": "Advanced",
                                        "hideLabel": true,
                                        "tableView": true,
                                        "type": "container",
                                        "input": true,
                                        "tab": 1,
                                        "key": "advanced",
                                        "components": [
                                            {
                                                "label": "Storage space (GB):",
                                                "type": "number",
                                                "input": true,
                                                "key": "storageSpace",
                                                "placeholder": "Default value: 5GB",
                                                "tab": 1
                                            }
                                        ]
                                    }
                                ]
                            }
                        ],
                        "type": "tabs",
                        "input": false,
                        "key": "tabs"
                    },
                    {
                        "type": "button",
                        "label": "Apply configuration",
                        "disableOnInvalid": true,
                        "theme": "primary",
                        "input": false,
                        "tableView": true
                    }
                ]
            }
        },
        "configUpdateWizardTemplate": null,
        "appDeploymentSpec": {
            "supportedDeploymentEnvironments": [
                "KUBERNETES"
            ],
            "kubernetesTemplate": {
                "chart": {
                    "name": "nmaas-bastion",
                    "version": "2.1.3"
                }
            },
            "storageVolumes": [
                {
                    "type": "MAIN",
                    "defaultStorageSpace": 5,
                    "deployParameters": {
                        "PERSISTENCE_ENABLED": "persistence.enabled",
                        "PERSISTENCE_NAME": "persistence.name",
                        "PERSISTENCE_STORAGE_CLASS": "persistence.storageClass",
                        "PERSISTENCE_STORAGE_SPACE": "persistence.size"
                    }
                }
            ],
            "deployParameters": {
                "DOMAIN_CODENAME": "metallb.subnet_name"
            },
            "globalDeployParameters": {
                "pubkeyManagement.secret": "%RANDOM_STRING_12%",
                "pubkeyManagement.authorizedKeysPath": "/home/netops/.ssh/authorized_keys"
            },
            "exposesWebUI": true,
            "accessMethods": [
                {
                    "type": "INTERNAL",
                    "name": "SSH",
                    "tag": "bastion",
                    "deployParameters": {
                        "K8S_SERVICE_PORT": "22"
                    }
                },
                {
                    "type": "DEFAULT",
                    "name": "pubkeyApp",
                    "tag": "pubkeyapp",
                    "deployParameters": {
                        "INGRESS_ENABLED": "pubkeyManagement.app.ingress.enabled",
                        "INGRESS_CLASS": "pubkeyManagement.app.ingress.class",
                        "INGRESS_HOSTS": "pubkeyManagement.app.ingress.hosts",
                        "INGRESS_TLS_ENABLED": "pubkeyManagement.app.ingress.tls.enabled",
                        "INGRESS_TLS_HOSTS": "pubkeyManagement.appHost=%VALUE%"
                    }
                }
            ]
        },
        "appConfigurationSpec": {
            "configFileRepositoryRequired": false
        }
    }
}