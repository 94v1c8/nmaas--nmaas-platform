        "version": "1.10.2",
        "configWizardTemplate": {
            "template": {
                "components": [
                    {
                        "label": "Tabs",
                        "components": [
                            {
                                "label": "Base",
                                "key": "configTab",
                                "components": [
                                    {
                                        "label": "Additional Parameters",
                                        "hideLabel": true,
                                        "type": "container",
                                        "input": true,
                                        "tab": 0,
                                        "key": "additionalParameters",
                                        "components": [
                                            {
                                                "label": "Allocated storage space",
                                                "type": "textfield",
                                                "input": true,
                                                "key": "persistence#size",
                                                "tab": 0,
                                                "validate": {
                                                    "required": true
                                                },
                                                "defaultValue": "5Gi",
                                                "placeholder": "Default value: 5Gi",
                                                "inputFormat": "plain"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ],
                        "type": "tabs",
                        "input": false,
                        "key": "tabs"
                    },
                    {
                        "type": "button",
                        "label": "Apply configuration",
                        "disableOnInvalid": true,
                        "theme": "primary",
                        "input": false,
                        "tableView": true
                    }
                ]
            }
        },
        "configUpdateWizardTemplate": null,
